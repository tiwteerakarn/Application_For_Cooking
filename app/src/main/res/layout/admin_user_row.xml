<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/food_photo"
            android:padding="8dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titlevip"
            android:text="VIP"
            android:visibility="invisible"
            android:layout_margin="6dp"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorRed"
            android:background="@drawable/shape_rect06"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titlename_user"
            android:layout_toRightOf="@+id/food_photo"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="Foods name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title1"
            android:text="follow"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/food_photo"
            android:layout_below="@+id/titlename_user"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title2"
            android:text="point"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/food_photo"
            android:layout_below="@+id/title1"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title3"
            android:text="login"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/food_photo"
            android:layout_below="@+id/title2"
            android:textSize="14dp"
            android:layout_marginBottom="4dp"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>